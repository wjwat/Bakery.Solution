@model Bakery.Models.Flavor

<h3>Are you sure you want to delete this Flavor?</h3>

@using (Html.BeginForm())
{
  <h5>Flavor Details</h5>
  @await Html.PartialAsync("_Tables/_FlavorDetails")

  @if (Model.JoinEntities.Count() > 0)
  {
    <hr />
    <h5>This flavor is currently describing these treats:</h5>
    @await Html.PartialAsync("_Tables/_TreatsSimple", @Model.JoinEntities.Select(t => t.Treat).ToList())
    <hr />
  }

  @await Html.PartialAsync("_Buttons/_Cancel")
  @await Html.PartialAsync("_Buttons/_Delete")
}
